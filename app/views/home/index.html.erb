<header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
         
            <ol class="carousel-indicators"> 
            <% @recipes.each do |recipe| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%=recipe%>"></li>
                  <%end%>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
           <% @recipes.each do |recipe| %>
                <div class="carousel-item active" style="background-image: url('http://placehold.it/1900x1080/1abc9c/fff')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3><%=link_to recipe.name,recipe_path(recipe) %></h3>
                        <p><%=recipe.summary%>.</p>
                    </div>
                </div>
                  <%end%>
                   
                <!-- Slide Two - Set the background image for this slide in the line below -->

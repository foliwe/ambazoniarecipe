<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @recipe.image ,size: "600x350"%>
</p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @recipe.summary %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<% if can? :update, @recipe %>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |<%end%> 
<% if can? :destroy, @recipe %>
<%= link_to "Delete this Recipe", recipe_path(@recipe),
                                    method: :delete,
                                    data: { confirm: "Are you sure you want to delete this Recipe?"} %> <br>
<%end%>

<%= link_to 'Back', recipes_path %>
